<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/textFieldHour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="13:00"
        android:textColor="@color/chat_text_color"
        android:layout_marginStart="10dp"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/textFieldMessage"
        android:layout_width="wrap_content"
        android:minHeight="30dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="olÃ¡ leo"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="13sp"
        app:cornerRadius="10dp"
        android:textStyle="bold"
        android:background="@drawable/shape_message_radius"
        android:textColor="@color/chat_text_color"
        app:layout_constraintTop_toBottomOf="@id/textFieldHour"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>